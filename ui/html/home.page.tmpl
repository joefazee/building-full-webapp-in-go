{{template "base" . }}

{{define "title"}}Home{{end}}

{{define "main"}}
    {{if .Snippets}}
    <table>
        <tr>
            <th>Title</th>
            <th>Created</th>
            <th>ID</th>
        </tr>
        {{range .Snippets}}
            <tr>
                <td><a href="/snippet/{{.ID}}">{{.Title}}</a></td>
                <td>{{humanDate .Created}}</td>
                <td>#{{.ID}}</td>
            </tr>
        {{end}}
    </table>
    {{else}}
    <h1>Nothing here yet!</h1>
    {{end}}

{{end}}